<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/nen"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/logo">

        </ImageView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:minHeight="100dp"

        android:gravity="center">

        <Button
            android:onClick="choigame"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:background="@drawable/bt_icon"
            android:text="ChÆ¡i"
            android:textColor="#ffff"
            android:textSize="20sp" />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/tat_nhac"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_on"

            android:visibility="visible"></Button>

        <Button
            android:id="@+id/bat_nhac"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_off"

            android:visibility="gone"></Button>
    </RelativeLayout>






</LinearLayout>